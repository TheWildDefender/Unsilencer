<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/editorFragment">
    <fragment
        android:id="@+id/editorFragment"
        android:name="com.example.unsilencer.EditorFragment"
        android:label="Unsilencer"
        tools:layout="@layout/fragment_editor">
        <action
            android:id="@+id/action_editorFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.unsilencer.SettingsFragment"
        android:label="Settings" />
</navigation>